{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "baseUrl": ".",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": false,
        "noImplicitAny": false,
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "dist",
        ".next",
        ".history",
        "node_modules"
    ]
}